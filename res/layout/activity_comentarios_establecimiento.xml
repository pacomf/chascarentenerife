<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="10dp"
    android:paddingLeft="7dp"
    android:paddingRight="7dp"
    android:paddingTop="10dp"
    tools:context=".ComentariosEstablecimiento" >
    
    <RelativeLayout 
        android:id="@+id/cabecera"
        android:layout_width="match_parent"
    	android:layout_height="wrap_content">
    	
    	<ImageView
	        android:id="@+id/icon"
	        android:layout_width="32dp"
	        android:layout_height="37dp"
	        android:layout_marginTop="10dp"
	        android:layout_marginLeft="10dp"
	        android:src="@drawable/restaurante" />

	    <TextView
	        android:id="@+id/nombre"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@id/icon"
	        android:paddingLeft="10dp"
	        android:layout_marginTop="7dp"
	        android:layout_marginRight="4dp"
	        android:textAppearance="?android:attr/textAppearanceLarge"
	        android:singleLine="true"/>
	    
	    <TextView
	        android:id="@+id/direccion"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@id/icon"
	        android:paddingLeft="10dp"
	        android:paddingBottom="5dp"
	        android:layout_marginRight="4dp"
	        android:layout_below="@+id/nombre"
	        android:textAppearance="?android:attr/textAppearanceMedium"
	        android:textColor="#777777" />
	    
	    <RelativeLayout 
	        android:id="@+id/valoracion"
	        android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:layout_below="@+id/direccion">
	    	
	        <ImageView
		        android:id="@+id/v1"
		        android:layout_width="30dp"
		        android:layout_height="30dp"
		        android:layout_marginTop="10dp"
		        android:layout_marginLeft="10dp"
		        android:src="@drawable/ic_launcher" />
	        <ImageView
		        android:id="@+id/v2"
		        android:layout_width="30dp"
		        android:layout_height="30dp"
		        android:layout_marginTop="10dp"
		        android:layout_marginLeft="5dp"
		        android:layout_toRightOf="@+id/v1"
		        android:src="@drawable/ic_launcher" />
	        <ImageView
		        android:id="@+id/v3"
		        android:layout_width="30dp"
		        android:layout_height="30dp"
		        android:layout_marginTop="10dp"
		        android:layout_marginLeft="5dp"
		        android:layout_toRightOf="@+id/v2"
		        android:src="@drawable/ic_launcher" />
	        <ImageView
		        android:id="@+id/v4"
		        android:layout_width="30dp"
		        android:layout_height="30dp"
		        android:layout_marginTop="10dp"
		        android:layout_marginLeft="5dp"
		        android:layout_toRightOf="@+id/v3"
		        android:src="@drawable/ic_launcher" />
	        <ImageView
		        android:id="@+id/v5"
		        android:layout_width="30dp"
		        android:layout_height="30dp"
		        android:layout_marginTop="10dp"
		        android:layout_marginLeft="5dp"
		        android:layout_toRightOf="@+id/v4"
		        android:src="@drawable/ic_launcher" />

	    </RelativeLayout>
	    
	    <TextView
	        android:id="@+id/precio"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@id/valoracion"
	        android:layout_below="@+id/direccion"
	        android:layout_marginTop="15dp"
	        android:gravity="right"
	        android:layout_marginRight="5dp"
	        android:textAppearance="?android:attr/textAppearanceMedium"
	        android:singleLine="true"/>
        
    </RelativeLayout>

    <ListView 
      android:id="@+id/lista_comentarios" 
      android:layout_below="@+id/cabecera"
      android:layout_marginTop="10dp"
      android:layout_height="match_parent"
      android:layout_width="match_parent"
      android:divider="@android:color/transparent"
  	  android:dividerHeight="10sp" />

</RelativeLayout>
