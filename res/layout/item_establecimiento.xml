<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/background_listview">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="32dp"
        android:layout_height="37dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/restaurante" />
    
    <TextView
        android:id="@+id/media"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/icon"
        android:layout_marginTop="3dp"
        android:layout_toLeftOf="@+id/direccion"
        android:paddingLeft="10dp"
        android:singleLine="true"
        android:textColor="#AAAAAA" 
        android:text="@string/valor_defecto"
        android:layout_marginBottom="3dp"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    
    <TextView
        android:id="@+id/nombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/icon"
        android:paddingLeft="10dp"
        android:layout_marginTop="7dp"
        android:layout_marginRight="4dp"
        android:layout_toLeftOf="@+id/precioColor"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:singleLine="true"/>
    
    <TextView
        android:id="@+id/direccion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/icon"
        android:paddingLeft="10dp"
        android:paddingBottom="5dp"
        android:layout_marginRight="4dp"
        android:layout_toLeftOf="@+id/precioColor"
        android:layout_below="@+id/nombre"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#777777" />
    
    <View
        android:id="@+id/limite"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_below="@+id/media"/>
	        
    <View
        android:id="@+id/precioColor"
        android:layout_width="4dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/limite"
        android:layout_alignParentRight="true"
        android:layout_marginRight="3dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:background="#DDDDDD" />

</RelativeLayout>
